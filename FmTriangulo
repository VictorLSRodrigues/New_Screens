    private void JBCalcularActionPerformed(java.awt.event.ActionEvent evt) {                                           
   Triangulo tril = new Triangulo();
   tril.setBase(Double.parseDouble(JTFBASE.getText()));
   tril.setAltura(Double.parseDouble(JTFALTURA.getText()));
   JLArea.setText(tril.getArea()+"");
    }                                          

    private void JBFecharActionPerformed(java.awt.event.ActionEvent evt) {                                         
        System.exit(0);
    }                                        

    private void JBLimparActionPerformed(java.awt.event.ActionEvent evt) {                                         
JTFBASE.setText("");
JTFALTURA.setText("");
JLArea.setText("0.0");
    }                                        

